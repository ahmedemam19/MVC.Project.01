
@model Department

@{
    ViewData["Title"] = "Delete Department";
}

<h1>Are You Sure To Delete This Department ?</h1>

<br />
<br />


<form asp-action="Delete" asp-controller="Department">

    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input asp-for="DateOfCreation" class="form-control" />
    </div>


    <input type="submit" value="Delete" class="btn btn-primary" /> | 
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section ValidateScriptsSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

