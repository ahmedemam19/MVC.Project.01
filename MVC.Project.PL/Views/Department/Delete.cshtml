@model DepartmentViewModel

@{
    ViewData["Title"] = "Delete Department";
}

<h1>Are You Sure To Delete This Department ?</h1>

<br />
<br />


<form asp-action="Delete" asp-controller="Department">


    @* For Rendering the components in the DetailsDeleteDepartmentPartial *@
    <partial name="PartialViews/DetailsDeleteDepartmentPartial" />


    <input type="submit" value="Delete" class="btn btn-primary" /> | 
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section ValidateScriptsSection {
    <partial name="_ValidationScriptsPartial" />
