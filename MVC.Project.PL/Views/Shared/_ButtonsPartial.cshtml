
@* file for the common buttons in the Employee And Department Files in the file [ Shared ]*@

@model int 
@* The [ int ] referes to the type of the [ Id ] *@



<td>
    <a asp-action="Details" asp-route-id="@Model" class="btn btn-warning">
        <i class="fa-solid fa-eye"></i> Details
    </a>
</td>
<td>
    <a asp-action="Edit" asp-route-id="@Model" class="btn btn-success">
        <i class="fa-solid fa-edit"></i> Edit
    </a>
</td>
<td>
    <a asp-action="Delete" asp-route-id="@Model" class="btn btn-danger">
        <i class="fa-solid fa-trash"></i> Delete
    </a>
</td>





